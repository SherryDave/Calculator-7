#Python calculator 
def get_numbers():
    """Gets two numbers from the user."""
    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        return num1, num2
    except ValueError:
        print("Invalid input. Please enter numbers only.")
        return None, None

def get_operator():
    """Gets the desired operator from the user."""
    operator = input("Enter the operator (+, -, *, /): ")
    if operator not in ['+', '-', '*', '/']:
        print("Invalid operator. Please enter +, -, *, or /.")
        return None
    return operator

def calculate(num1, num2, operator):
    """Calculates the result based on the operator."""
    if operator == '+':
        return num1 + num2
    elif operator == '-':
        return num1 - num2
    elif operator == '*':
        return num1 * num2
    elif operator == '/':
        if num2 == 0:
            return "Cannot divide by zero."
        else:
            return num1 / num2
    else:
        return "Invalid operator"  # Should not reach here

def arithmetic_operations():
    """Main function to perform arithmetic operations."""
    while True:
        print("\nArithmetic Operations Menu:")
        print("1. Perform Arithmetic Operation")
        print("2. Exit")
        
        choice = input("Enter your choice (1/2): ")
        
        if choice == '1':
            num1, num2 = get_numbers()
            
            if num1 is None or num2 is None:
                continue  # Skip to the next iteration if input is invalid
            
            operator = get_operator()
            if operator is None:
                continue  # Skip to the next iteration if operator is invalid
            
            result = calculate(num1, num2, operator)
            print("Result:", result)
        elif choice == '2':
            print("Exiting the program.")
            break
        else:
            print("Invalid choice. Please enter 1 or 2.")

# Run the program
arithmetic_operations()
